#!/usr/bin/perl -w

use warnings;
use strict;
use lib qw(lib);
use Getopt::Long;
use Readonly;

BEGIN {
  $ENV{DOCUMENT_ROOT} = './htdocs';
}

use ClearPress::controller;

use admin_app::view::error;
use admin_app::util;

use admin_app::view::holiday;
use admin_app::model::holiday;
use admin_app::view::email_rule;
use admin_app::model::email_rule;
use admin_app::view::person_team;
use admin_app::model::person_team;
use admin_app::view::holiday_allowance;
use admin_app::model::holiday_allowance;
use admin_app::view::expense_claim;
use admin_app::model::expense_claim;
use admin_app::view::responsibility_for;
use admin_app::model::responsibility_for;
use admin_app::view::admingroup;
use admin_app::model::admingroup;
use admin_app::view::person_admingroup;
use admin_app::model::person_admingroup;
use admin_app::view::person;
use admin_app::model::person;
use admin_app::view::person_allowance;
use admin_app::model::person_allowance;
use admin_app::view::company;
use admin_app::model::company;
use admin_app::view::team_company;
use admin_app::model::team_company;
use admin_app::view::team;
use admin_app::model::team;

our $VERSION = do { my ($r) = q$LastChangedRevision: 413 $ =~ /(\d+)/smx; $r; };
Readonly::Scalar our $PORT => 8080;

my $opts = {};
GetOptions($opts, qw(port=s));
my ($port) = ($opts->{port} || $PORT) =~ /(\d+)/smx;

admin_app::sa->new($port)->run;

0;

package admin_app::sa;
use base qw(HTTP::Server::Simple::CGI);
use strict;
use warnings;
use Data::Dumper;
use Carp;
use English qw(-no_match_vars);

sub handle_request {
  my ($self, $cgi) = @_;

  my $EXTN = {
	      css  => 'text/css',
	      xml  => 'text/xml',
	      gif  => 'image/gif',
	      png  => 'image/png',
	      jpg  => 'image/jpeg',
	      txt  => 'text/plain',
	      html => 'text/html',
              js   => 'text/javascript',
	     };

  my $util = admin_app::util->new({
					   cgi => $cgi,
					  });
  print "HTTP/1.0 200 OK\n";

  my ($fn) = "htdocs$ENV{REQUEST_URI}" =~ m|([a-z\d_/\.\-%]+)|mix;
  $fn      =~ s|\.\./||smxg;

  if(-f $fn) {
    my ($ext) = $fn =~ /\.([^\.]+)$/smx;

    my $type  = $EXTN->{lc $ext} || 'application/octet-stream';
    print qq(Content-type: $type\n\n);
    carp qq(Serving static file $fn as $ext / $type);
    open my $fh, $fn or croak "Opening $fn: $ERRNO";
    while(<$fh>) {
      print;
    }
    close $fh or croak "Closing $fn: $ERRNO";

  } else {
    ClearPress::controller->handler($util);
  }

  return 1;
}

sub print_banner {
  my $self = shift;
  print q[admin_app development server up and running at http://localhost:].$self->port()."/\n";
  return 1;
}

1;
 
